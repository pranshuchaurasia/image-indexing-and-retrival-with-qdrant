# Environment Configuration Template
# Copy this file to .env and update paths for your system

# =============================================================================
# QDRANT CONFIGURATION
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333

# =============================================================================
# POPPLER PATH (Required for PDF to Image conversion)
# =============================================================================
# Download Poppler from: https://github.com/oschwartz10612/poppler-windows/releases
poppler_path=D:/path/to/poppler/Library/bin

# =============================================================================
# VDR-2B-MULTI-V1 MODEL CONFIGURATION
# =============================================================================
vdr_2b_multi_v1=D:/path/to/models/vdr-2b-multi-v1
collection_name_vdr=vdr_annual_report

# =============================================================================
# COLPALI MODEL CONFIGURATION
# =============================================================================
colpali_model=D:/path/to/models/vidore_colpaligemma-3b-pt-448-base
colpali_processor=D:/path/to/models/colpali_v1.3
collection_name_colpali=colpali_annual_report

# =============================================================================
# COLQWEN MODEL CONFIGURATION
# =============================================================================
colqwen_model=D:/path/to/models/colqwen2-base
colqwen_processor=D:/path/to/models/colqwen2_v1.0_processor
collection_name_colqwen=colqwen_annual_report

# =============================================================================
# DATA PATHS (Optional - for example usage in scripts)
# =============================================================================
pdf_input_folder=D:/path/to/pdf/files
converted_images_folder=D:/path/to/converted/images
